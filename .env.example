# Razorpay
RAZORPAY_KEY=
RAZORPAY_SECRET=

# Paystack
PAYSTACK_PUBLIC_KEY=
PAYSTACK_SECRET_KEY=

# CoinGate (for crypto payments)
COINGATE_API_KEY=
COINGATE_ENVIRONMENT=sandbox

# SMS Configuration
SMS_DRIVER=twilio
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

# Agora.io Configuration (for video calls)
AGORA_APP_ID=
AGORA_APP_CERTIFICATE=

# File Storage Configuration
FILESYSTEM_DRIVER=local
MEDIA_STORAGE_DRIVER=local

# Mobile App Configuration
MOBILE_APP_VERIFICATION_SALT=your-mobile-verification-salt
API_TOKEN_EXPIRY_DAYS=30

# Security Configuration
BCRYPT_ROUNDS=10

# Dating App Specific Configuration
DEFAULT_CURRENCY=USD
CREDIT_SYSTEM_ENABLED=true
PREMIUM_FEATURES_ENABLED=true
VIDEO_CALLING_ENABLED=true
LOCATION_SERVICES_ENABLED=true

# Admin Configuration
ADMIN_EMAIL=admin@loversnmore.com
ADMIN_DEFAULT_PASSWORD=changeme123

# Maintenance Mode
MAINTENANCE_MODE=false

# API Rate Limiting
API_RATE_LIMIT=60

# Image Processing
IMAGE_DRIVER=gd
